# Step 1: Build the Angular app
FROM node:18 AS build
WORKDIR /app
COPY ./portfolio-angular/package*.json ./
RUN npm install
COPY ./portfolio-angular ./
RUN npm run build --prod  # Ensure this step completes without errors

# Step 2: Serve the Angular app using NGINX
FROM nginx:alpine
# Copy the built Angular files into the NGINX directory
COPY --from=build /app/dist/portfolio-angular /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
